# Tự động xử lý line endings
* text=auto

# Luôn dùng LF cho code
*.js  text eol=lf
*.jsx text eol=lf
*.ts  text eol=lf
*.tsx text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.php text eol=lf
*.json text eol=lf
*.md  text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.sh  text eol=lf

# Windows script giữ CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Không thay đổi file nhị phân
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.ico  binary
*.woff binary
*.woff2 binary
*.ttf  binary
*.eot  binary
*.mp4  binary
*.mp3  binary
